	<!-- bootstrap js -->
	<style>
        a {
            text-decoration: none;
        }
        a:link {
            color: black;
        }
        a:visited {
            color: black;
        }
        table tbody tr {
            line-height: 2rem;
            table-layout: fixed;
            word-break: keep-all;
